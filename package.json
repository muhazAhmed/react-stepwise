    "postcss": "^8.5.6",
    "react-router-dom": "^7.8.2",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.5.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
